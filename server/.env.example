# ==== General ====
PORT=8787

# Set to true to log raw events (verbose)
DEBUG=false

# ==== Twitch (optional but recommended) ====
# Twitch username (lowercase) and OAuth token (generate at https://twitchapps.com/tmi/)
TWITCH_USERNAME=your_twitch_username
TWITCH_OAUTH=oauth:xxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Comma-separated list of channels to join (without the '#')
TWITCH_CHANNELS=yourchannel

# ==== YouTube Live Chat (no API / no quota) ====
# Provide the YouTube Channel ID
YT_CHANNEL_ID=YOUR_YOUTUBE_LIVE_VIDEO_ID
# If your live is not yet started, set this to true to retry periodically
YT_RETRY_WHEN_OFFLINE=true

# ==== TikTok (reverse websocket) ====
# Your TikTok @username (without the @)
TIKTOK_USERNAME=your_tiktok_username
