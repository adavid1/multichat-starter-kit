# ==== General ====
PORT=8787

# Set to true to log raw events (verbose)
DEBUG=false

# ==== Twitch ====
# Twitch channel name
TWITCH_CHANNEL=yourchannel
# Twitch OAuth token for API access (optional, for enhanced badge support)
TWITCH_OAUTH=oauth:xxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWITCH_CLIENT_ID=your_twitch_client_id

# ==== YouTube Live Chat (no API / no quota) ====
# Provide the YouTube Channel ID (not the channel handle)
# You can find this in your YouTube Studio or by using online tools
YT_CHANNEL_ID=UCxxxxxxxxxxxxxxxxxxxx

# Whether to retry connection when stream is offline (recommended: true)
YT_RETRY_WHEN_OFFLINE=true

# Whether to automatically start YouTube monitoring on server startup (optional)
# If false, you'll need to manually start it from the settings panel
YT_AUTO_START=false

# ==== TikTok (reverse websocket) ====
# Your TikTok @username (without the @)
TIKTOK_USERNAME=your_tiktok_username

# ==== Development/Testing ====
# Set to true to generate fake messages for testing
FAKE_MESSAGES=false